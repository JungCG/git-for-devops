# .github/workflows/main.yml

name: Deploy Next.js App to Azure VM

# ğŸ”´ íŠ¸ë¦¬ê±°: main ë¸Œëœì¹˜ì— pushí•  ë•Œ ìë™ ì‹¤í–‰
on:
  push:
    branches:
      - main

jobs:
  build-and-deploy:
    name: Build and Deploy
    runs-on: ubuntu-latest

    steps:
      # âœ… CI (Continuous Integration) ë‹¨ê³„
      - name: Checkout source code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: "20"
          cache: 'npm'

      - name: Create .env file for build
        run: |
          echo "DATABASE_URL=${{ secrets.DATABASE_URL }}" >> .env.local
          echo "NEXTAUTH_SECRET=${{ secrets.NEXTAUTH_SECRET }}" >> .env.local

      - name: Install dependencies and Lint and Test
        run: |
          npm install
          npm run lint
          npm run test

      - name: Build Application
        run: npm run build

      - name: Create deployment package
        run: |
          tar -czf deploy.tar.gz .next node_modules package.json
          echo "CI ì™„ë£Œ / CD ì œì™¸"

      # âœ… CD (Continuous Deployment) ë‹¨ê³„
      - name: Transfer package to Azure VM
        uses: appleboy/scp-action@master
        with:
          host: ${{ secrets.VM_HOST }}
          username: azureuser
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          source: "deploy.tar.gz"
          target: "/home/azureuser"

      - name: Deploy application on Azure VM
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.VM_HOST }}
          username: azureuser
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          script: |
            mkdir -p /home/azureuser/app
            mv /home/azureuser/deploy.tar.gz /home/azureuser/app/
            cd /home/azureuser/app
            tar -xzf deploy.tar.gz
            rm deploy.tar.gz

            pm2 stop jcg-vm-app || true
            pm2 delete jcg-vm-app || true

            # pm2 start ëª…ë ¹ì–´ í•œ ì¤„ì— í™˜ê²½ë³€ìˆ˜ë¥¼ ì§ì ‘ ì£¼ì…í•˜ì—¬ ì‹¤í–‰í•©ë‹ˆë‹¤.
            DATABASE_URL='${{ secrets.DATABASE_URL }}' NEXTAUTH_SECRET='${{ secrets.NEXTAUTH_SECRET }}' pm2 start "npx next start" --name "jcg-vm-app"

            pm2 save
            echo "ğŸš€ Deployment successful!"